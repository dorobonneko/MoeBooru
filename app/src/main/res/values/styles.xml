<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="AppTheme" parent="@android:style/Theme.DeviceDefault">
	  	<item name="android:colorPrimary">@color/primary</item>
		<item name="android:colorPrimaryDark">@color/primary</item>
	  <item name="android:colorAccent">@color/accent</item> 
	  
		<item name="android:windowNoTitle">true</item>
	  <item name="android:windowActionBar">false</item>
	  <item name="android:windowTranslucentStatus">false</item>
	  <item name="android:windowTranslucentNavigation">true</item>
	  <item name="android:windowFrame">@null</item>
	  <item name="android:windowBackground">@android:color/transparent</item>
	  <item name="android:statusBarColor">@android:color/transparent</item>
	  <item name="android:colorControlNormal">#ffffff</item>
	  <item name="android:colorControlActivated">#bbbbbb</item>
	  <item name="android:colorControlHighlight">#50bbbbbb</item>
		<!--	按钮颜色<item name="android:colorButtonNormal">#ff009688</item>
		-->
	  <item name="android:selectableItemBackground">@drawable/ripple_round</item>
	  <item name="android:selectableItemBackgroundBorderless">@drawable/ripple_circle</item>
	  <item name="android:popupTheme">@style/PopupTheme</item>
		</style>
	<style name="checkTextStyle" parent="AppTheme">
		<item name="android:colorControlNormal">#555</item>
		<item name="android:colorControlActivated">#000</item>
		<item name="android:colorControlHighlight">#50D1C4E9</item>
	</style>
	<style name="Theme.Dialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
		<item name="android:colorPrimary">@color/primary</item>
		<item name="android:colorPrimaryDark">@color/primary</item>
		<item name="android:colorAccent">@color/accent</item> 
		<item name="android:colorButtonNormal">@color/accent</item>
		<item name="android:colorControlHighlight">@color/accent</item>
		<item name="android:colorControlActivated">@color/accent</item>
		<item name="android:windowMinWidthMajor">90%</item>
		<item name="android:windowMinWidthMinor">90%</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowActionBar">false</item>
		<item name="android:windowBackground">@drawable/dialog_background</item>

	</style>
	<style name="PopupTheme" parent="@android:style/Theme.DeviceDefault.Light.Panel">
		<item name="android:colorPrimary">@color/primary</item>
		<item name="android:colorPrimaryDark">@color/primary</item>
		<item name="android:colorAccent">@color/accent</item> 
		
	</style>
</resources>
